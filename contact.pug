include mixins

doctype html
html(lang="en")
  head
    include ./head
    title Brado - Contact Us
  body
    // Preloader Start
    #preloader
      .jumper
        div
        div
        div
    // Preloader End
    // Header
    include ./header

    header
      nav.navbar.navbar-expand-lg
        .container
          a.navbar-brand(href='index.html')
            img(src='./assets/images/logo.png', alt='')
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarResponsive.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='index.html') Home
              li.nav-item
                a.nav-link(href='about.html') About Us
              li.nav-item
                a.nav-link(href='services.html') Our Services
                  i.fa.fa-angle-down(aria-hidden='true')
              li.nav-item
                a.nav-link(href='#') Our Project
                  i.fa.fa-angle-down(aria-hidden='true')
              li.nav-item
                a.nav-link(href='blog.html') Blog
                  i.fa.fa-angle-down(aria-hidden='true')
              li.nav-item.active
                a.nav-link(href='contact.html') Contact Us
              li.nav-item.nav-item-search
                a.nav-link(href='#')
                  i.fa.fa-search(aria-hidden='true')

    //Page Content

    //Banner Starts Here
    .page-heading(style='background-image: url(assets/images/contact-banner.png);').header-text
      .container
        .row
          .col-md-12
            h1
              em Contact Us
            span FEEL FREE TO SEND US A MESSAGE NOW!
    //Banner Ends Here

    .contact-information
      .container
        .row.contact-main
          .col-md-4
            .contact-item
              i.fa.fa-phone
              h4 Phone
              p Vivamus ut tellus mi. Nulla nec cursus elit, id vulputate nec cursus augue.
              a(href='#') MR. Do: 727.410.4441
              a(href='') Mr. Brackman: 937.441.1933
          .col-md-4
            .contact-item
              i.fa.fa-envelope
              h4 Email
              p Vivamus ut tellus mi. Nulla nec cursus elit, id vulputate nec cursus augue.
              a(href='#') info@company.com
              a(href='#') info@company.com


    .callback-form.contact-us.send-message
      .container
        .row
          .col-md-12
            .section-heading
              h2
                | Send us a
                em message
              span Suspendisse a ante in neque iaculis lacinia
          .col-md-12.contact
            .container
              .row
                .col-md-6
                  form(id='contact hp-contact', action='', method='post')
                    .contact-form
                      .container
                        .row
                          .col-lg-12.col-md-12.col-sm-12
                            fieldset
                              label(for='service') Choose service
                              select(id='service' name='service')
                                option(value='')
                              //- input#name1.form-control(name='name1', type='selected', required='')
                          .col-lg-12.col-md-12.col-sm-12
                            fieldset
                              label(for='name1') Name
                              input#name1.form-control(name='name1', type='text', required='')
                          .col-lg-12.col-md-12.col-sm-12
                            fieldset
                              label(for='email1') Email
                              input#email1.form-control(name='email1', type='text', pattern='[^ @]*@[^ @]*', required='')
                          .col-lg-12.col-md-12.col-sm-12
                            fieldset
                              label(for='phone1') Phone
                              input#phone1.form-control(name='phone1', type='number', required='')
                          .col-lg-12
                            fieldset
                              label(for='message1') Your Message
                              textarea#message1.form-control(name='message1', rows='6', required='')
                          .send
                            fieldset(style='display: flex;')
                              button#form-submit.filled-button(type='submit') Send Message







    include ./footer


    // Bootstrap core JavaScript
    script( src="vendor/jquery/jquery.min.js")
    script( src="vendor/bootstrap/js/bootstrap.bundle.min.js")

    // Additional Scripts
    script( src="assets/js/custom.js")
    script( src="assets/js/owl.js")
    script( src="assets/js/slick.js")
    script( src="assets/js/accordions.js")

    script(language='text/javascript').
      cleared[0] = cleared[1] = cleared[2] = 0;

      function clearField(t) {
        if (!cleared[t.id]) {
          cleared[t.id] = 1;
          t.value = '';
          t.style.color = '#fff';
        }
      }
